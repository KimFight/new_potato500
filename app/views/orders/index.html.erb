<div class = "item-main">

  <div class = "buy-box">

    <div class = "buy-box-left">
      <p>この商品で間違いないですか？</p>
      <%= image_tag @item.item_image, class:"order-img"%>
      
      <p><%= @item.name %></p>
      <p><%= simple_format @item.introduction %></p>
      <p class = "order-price">税込<%= @item.price %>円</p>

    </div>
     
    <%= form_with(model: @purchase, url: item_orders_path, id: 'charge-form', class: 'transaction-form-wrap', local: true) do |f| %>  
    <div class='buy-box-right'>

      <h1>クレジットカード情報入力</h1>
      <span class="indispensable">※</span>は必ず入力してください。

    <!-- 支払額の表示 -->
      <div class = "order-price"> 
        支払金額　税込<%= @item.price %>円
      </div>

    <!-- -->

    <!-- カード情報の入力 -->
    <div class="order-form">
       
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">カード情報</label>
        <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
       
        <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>
      
      <div></div>

      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">有効期限</label>
          <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
          月
          <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
          年
      </div>
      
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">セキュリティコード</label>
        <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
    <!-- -->
    <hr>
    <!-- 配送先の入力 -->

      <div class="form-group">
        <span class="indispensable">※</span>
        <label class="form-text">フルネーム</label>
        <%= f.text_field :name, class:"input-default", id:"addresses", placeholder:"例）保手 戸芋"%>
      </div>
      
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">郵便番号</label>
        <%= f.text_field :postal_code, class:"input-default", id:"postal-code", placeholder:"例)123-4567", maxlength:"8" %>
      </div>
      
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">都道府県</label>
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, class: "address" %>
      </div>
      
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">市区町村</label>
        <%= f.text_field :city , class:"input-default", id:"city", placeholder:"例)横浜市緑区"%>
      </div>
      
      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">番地</label>
        <%= f.text_field :building, class:"input-default", id:"addresses", placeholder:"例)青山1-1"%>
      </div>

      <div class="form-group">
          <span class="indispensable">※</span>
          <label class="form-text">電話番号</label>
        <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"半角数字ハイフンなし",maxlength:"11"%>
      </div>

    </div>
  </div>
  <!-- -->

    <%= link_to "利用規約", "#" %>

    <div class="">
      <%= f.submit "利用規約を了解して購入",class:"item-btn" %>
    </div>
    <% end %>
  </div>
</div>
