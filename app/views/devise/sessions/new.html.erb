<div class = "user-entry-outer">
  <div class = "user-entry-inner">
      
      <div class = "entry-title-font">ログイン</div>

      <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
      </div>
    
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

  <div class="field">
    <%= f.label :email, "メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログインしたままにしますか？" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", class: "actions"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>